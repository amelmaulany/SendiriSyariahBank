<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="0dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:minHeight="?attr/actionBarSize"
            android:titleTextColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_dashboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/dashboard_icon" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/app_name"
                    android:layout_marginLeft="125dp"
                    android:textColor="@color/white"/>

                <ImageButton
                    android:id="@+id/btn_contact_us"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:background="@null"
                    android:src="@drawable/contact_us" />

            </LinearLayout>


        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/dashboard_img" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_my_account"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/my_account_icon"
                        />
                </TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_transfer"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/transfer_icon" />
                </TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_m_payment"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/m_payment_icon" />
                </TableRow>
            </TableRow>
            <TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_m_commerce"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/m_commerce_icon" />
                </TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_cash_withdrawal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/cash_withdrawal_icon" />
                </TableRow>
                <TableRow>
                    <ImageButton
                        android:id="@+id/btn_inbox"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="1dp"
                        android:layout_width="90dp"
                        android:layout_height="105dp"
                        android:background="@null"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/inbox_icon" />
                </TableRow>
            </TableRow>


        </TableLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>